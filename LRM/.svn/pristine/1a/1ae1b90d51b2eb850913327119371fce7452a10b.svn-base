@import '~lanlinker/es/style/index.less';

.dropdownList {
  .label {
    margin-right: 20px;
    transition: all 0.3s;
    cursor: pointer;
    &.active,
    &:hover {
      color: @primary-color;
    }
  }
  .dropdown {
    position: absolute;
    width: 100%;
    height: 52px;
    top: 53px;
    left: 0;
    z-index: 1;
    border-radius: 0 0 5px 5px;
    box-shadow: @box-shadow-base;
    transition: all 0.1s ease-in-out;
    transform-origin: 0 -4px;
    &.hidden {
      visibility: hidden;
      opacity: 0;
      transform: scaleY(0.9);
    }
  }
}
