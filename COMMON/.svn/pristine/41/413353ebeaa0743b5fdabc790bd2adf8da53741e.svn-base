@import "../themes/index.less";

.center() {
  display: flex;
  justify-content: center;
  align-items: center;
}
.ellipsis() {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.background-dark-hover() {
  transition: all 0.3s;
  cursor: pointer;
  &:hover {
    background: @hover-dark-color;
  }
}

.header-panel() {
  background: @white;
  border-radius: 4px;
  box-shadow: @shadow-1-down;
}

.hover-background() {
  transition: all 0.3s;
  cursor: pointer;
  &:hover {
    background: @primary-1;
  }
}

.font1() {
  font-size: @heading-2-size;
  line-height: ceil(@heading-2-size * 1.26); //30
}
.font2() {
  font-size: @heading-3-size;
  line-height: ceil(@heading-3-size * 1.33); //24
}
.font3() {
  font-size: @heading-4-size;
  line-height: ceil(@heading-4-size * 1.4); //20
}
.font4() {
  font-size: @font-size-lg;
  line-height: ceil(@font-size-lg * 1.5); //16
}
.font5() {
  font-size: @font-size-base;
  line-height: ceil(@font-size-base * 1.57); //14
}
.font6() {
  font-size: @font-size-sm;
  line-height: ceil(@font-size-sm * 1.66); //12
}

// 标题
.h1() {
  .font1;
  font-weight: 500;
  color: @heading-color;
}
.h2() {
  .font2;
  font-weight: 500;
  color: @heading-color;
}
.h3() {
  .font3;
  font-weight: 500;
  color: @heading-color;
}
.h4() {
  .font4;
  font-weight: 500;
  color: @heading-color;
}
.h5() {
  .font5;
  font-weight: 500;
  color: @heading-color;
}
.h6() {
  .font6;
  font-weight: 500;
  color: @heading-color;
}

// 正文
.text-xl() {
  .font3;
  color: @text-color;
}
.text-lg() {
  .font4;
  color: @text-color;
}
.text-base() {
  .font5;
  color: @text-color;
}
.text-sm() {
  .font6;
  color: @text-color;
}
