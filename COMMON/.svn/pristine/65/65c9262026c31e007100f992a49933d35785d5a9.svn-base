@import '~antd/es/style/themes/default.less';

// color
@grey-1: #d9d9d9;
@grey-2: #e8e8e8;
@grey-3: #e9e9e9;
@grey-4: #f0f2f5;
@grey-5: #f0f0f0;
@grey-6: #f7f9fa;

@blue-1: #35b5fe;
@blue-2: #1c1f87;
@blue-3: #e6f7ff;

@black-1: #000;
@black-2: rgba(0, 0, 0, 0.85);
@black-3: rgba(0, 0, 0, 0.65);
@black-4: rgba(0, 0, 0, 0.45);
@black-5: rgba(0, 0, 0, 0.25);
@black-6: rgba(0, 0, 0, 0.15);
@black-7: rgba(0, 0, 0, 0.1);

@white-1: #fff;
@white-2: rgba(255, 255, 255, 0.85);
@white-3: rgba(255, 255, 255, 0.65);
@white-4: rgba(255, 255, 255, 0.45);
@white-5: rgba(255, 255, 255, 0.25);
@white-6: rgba(255, 255, 255, 0.15);
@white-7: rgba(255, 255, 255, 0.1);

// hover
@hover-dark-color: fade(@white, 15%);
@hover-color: fade(@black, 15%);

// header
@header-fc: @text-color-dark;
@header-fc-secondary: @normal-color;
@header-fc-third: @text-color-secondary-dark;
// sider

// content
@content-background: @layout-body-background;

// padding
@padding-normal: 24px;

// font-size
@fs-base: @font-size-base;
@fs-lg: @font-size-lg;

// border
@border-normal: @border-width-base @border-style-base @border-color-base;
@border-list: @border-width-base @border-style-base @grey-5;
@border-split: @border-width-base @border-style-base @border-color-split;

// card
@card-footer-bg: @grey-6;
