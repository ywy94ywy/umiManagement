// 备用文件
@grey-1: #d9d9d9;
@grey-2: #e8e8e8;
@grey-3: #e9e9e9;
@grey-3: #f0f2f5;

@blue-1: #35b5fe;
@blue-2: #1c1f87;
@blue-3: #e6f7ff;

@black-1: #000;
@black-2: rgba(0, 0, 0, 0.85);
@black-3: rgba(0, 0, 0, 0.65);
@black-4: rgba(0, 0, 0, 0.45);
@black-5: rgba(0, 0, 0, 0.25);
@black-6: rgba(0, 0, 0, 0.15);
@black-7: rgba(0, 0, 0, 0.1);

@white-1: #fff;
@white-2: rgba(255, 255, 255, 0.85);
@white-3: rgba(255, 255, 255, 0.65);
@white-4: rgba(255, 255, 255, 0.45);
@white-5: rgba(255, 255, 255, 0.25);
@white-6: rgba(255, 255, 255, 0.15);
@white-7: rgba(255, 255, 255, 0.1);

// 字体大小
@font-size-base: 14px;
@font-size-sm: calc(@font-size-base - 2px); // 12
@font-size-md: calc(@font-size-base + 2px); // 16
@font-size-lg: calc(@font-size-base + 6px); // 20
@font-size-xl: calc(@font-size-base + 10px); // 24
@font-size-xxl: calc(@font-size-base+ 16px); // 30

// shadow
@panel-shadow: 0 2px 8px rgba(0, 0, 0, 0.15);

// layout
@header-font-color: @white-3; // 头部字体颜色
@header-font-hover-color: @white-1; // 头部字体hover颜色
@content-background: @grey-3;

@border-1: 1px solid @grey-1;
@border-2: 1px solid @grey-2;

// 强度
@strong-color: green;

// mixin
.hover-background() {
  transition: all 0.3s;
  cursor: pointer;
  &:hover {
    background: @blue-3;
  }
}

.hover-background-white() {
  transition: all 0.3s;
  cursor: pointer;
  &:hover {
    background: @white-6;
  }
}

.dropdown-panel() {
  background: #fff;
  border-radius: 4px;
  box-shadow: @panel-shadow;
}

.center() {
  display: flex;
  justify-content: center;
  align-items: center;
}

.h1() {
  font-size: @font-size-xxl;
  font-weight: 500;
  line-height: 38px;
  color: @black-2;
}

.h2() {
  font-size: @font-size-xl;
  font-weight: 500;
  line-height: 32px;
  color: @black-2;
}

.h3() {
  font-size: @font-size-lg;
  font-weight: 500;
  line-height: 28px;
  color: @black-2;
}

.h4() {
  font-size: @font-size-md;
  font-weight: 500;
  line-height: 24px;
  color: @black-2;
}

.h5() {
  font-size: @font-size-base;
  font-weight: 500;
  line-height: 22px;
  color: @black-2;
}

.h6() {
  font-size: @font-size-sm;
  font-weight: 500;
  line-height: 20px;
  color: @black-2;
}

.text-lg() {
  font-size: @font-size-lg;
  line-height: 28px;
  color: @black-3;
}
.text-md() {
  font-size: @font-size-md;
  line-height: 24px;
  color: @black-3;
}
.text-base() {
  font-size: @font-size-base;
  line-height: 22px;
  color: @black-3;
}
