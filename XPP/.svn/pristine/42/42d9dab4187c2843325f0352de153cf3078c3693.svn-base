@import '~lanlinker/es/style/index.less';

.manual {
  .layout {
    width: 780px;
    margin: 0 auto;
    .stepWrapper {
      margin: 30px 0;
      .col1 {
        .h3;
        margin-top: 52px;
        flex: 0 0 260px;
        .step {
          width: 80px;
          height: 40px;
          margin-right: 20px;
        }
        > span {
          .text-lg;
          width: 260px;
        }
      }
      .col2 {
        flex: 0 0 400px;
        > .manualPic {
          width: 400px;
          height: 200px;
        }
      }
    }
  }
}
